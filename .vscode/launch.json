{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: Run (Debugpy)",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--host=0.0.0.0",
        "--port=5000"
      ],
      "env": {
        "FLASK_APP": "run.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal"
    }
  ]
}
